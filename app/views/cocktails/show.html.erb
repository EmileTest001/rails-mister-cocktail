<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(mocano.jpg);">
  <div class="container">
    <h1>Bloody Rails Bar</h1>
    <p>Discover the Art of Cocktail</p>
  </div>
</div>

<div class="container">

  <h2>Recipe for <%= @cocktail.name %> cocktail</h2>
  <div class="list-group">
    <% @cocktail.doses.each do |dose| %>
      <li class="list-group-item d-flex justify-content-between align-items-center">
        <p><%= Ingredient.find(dose.ingredient_id).name %> - <%= dose.description %></p>
        <%= link_to dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } do %>
          <i class="fa fa-trash-alt destroy_dose"></i>
        <% end %>

        <!--
        <i class="far fa-trash-alt"></i>
        <%= link_to "Delete", dose_path(dose), method: :delete, class: "btn btn-danger btn-sm", data: { confirm: "Are you sure ?" } %>
        -->
      </li>
    <% end %>
  </div>

  <h2>Add an ingredient ?</h2>
  <%= simple_form_for [@cocktail, @dose] do |f| %>
    <%= f.association :ingredient, input_html: { class: 'select2' } %>
    <%= f.input :description %>
    <%= f.submit "Add" %>
  <% end %>

  <%= link_to "Back", cocktails_path %>

</div>
